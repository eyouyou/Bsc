<body class="login1">
    <div class="login-wrapper">
        <div class="login-container">
            <a href="#"><img width="100" height="30" src="~/Images/logo-login@2x.png" /></a>
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new {@placeholder = "用户名/邮箱地址", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "密码", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    <input type="submit" value="&#xf054;">
                </div>
                <div class="form-options clearfix">
                    @Html.ActionLink("忘记了密码?", "ForgotPassword", null ,new { @class = "pull-right" })
                    <div class="text-left">
                        <label class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            <span>自动登录</span>
                        </label>
                    </div>
                </div>


            }
            <div class="social-login clearfix">
                <a class="btn btn-primary pull-left weibo" href="index.html"><i class="icon-weibo"></i>微博 账户登录</a><a class="btn btn-primary pull-right renren" href="index.html"><i class="icon-renren"></i>人人 账户登录</a>
            </div>
            <p class="signup">
                还没有账号？@Html.ActionLink("注册为新用户", "Register")
            </p>
        </div>
    </div>
</body>
